/**
 * Top and down menus.
 */
.menu-top, .menu-game
    padding 0.25rem 0

    & > div
        height 2.5rem

    p
        margin 0

.card-bg-icon
    overflow hidden
    position relative

    & > svg
        font-size 10em
        position absolute
        top -2rem
        right 0
        opacity 15%

/**
 * Online status icon
 */
.online-status-icon
    font-size 0.6rem
    margin-right 0.4em
    vertical-align middle
